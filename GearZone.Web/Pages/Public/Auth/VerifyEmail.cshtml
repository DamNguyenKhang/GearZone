@page
@model GearZone.Web.Pages.Public.Auth.VerifyEmailModel
@{
    Layout = null;
    ViewData["Title"] = "Verify Email";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - GearZone</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#1A56DB",
                        "background-light": "#F8FAFC",
                        "background-dark": "#111621",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    }
                },
            },
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex flex-col items-center justify-center p-6 font-display">
    <div class="mb-8 flex flex-col items-center text-center">
        <div class="bg-primary text-white p-2.5 rounded-xl shadow-lg mb-4">
            <span class="material-symbols-outlined text-3xl block">mail</span>
        </div>
        <h1 class="text-slate-900 dark:text-slate-100 text-2xl font-bold tracking-tight">Email Verification</h1>
    </div>

    <main class="w-full max-w-[440px] bg-white dark:bg-slate-900 rounded-lg shadow-xl border border-slate-200 dark:border-slate-800 p-8 text-center">
        <div class="mb-6">
            @if (Model.IsSuccess)
            {
                <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 text-green-600 rounded-full mb-4">
                    <span class="material-symbols-outlined text-4xl">check_circle</span>
                </div>
            }
            else
            {
                <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 text-red-600 rounded-full mb-4">
                    <span class="material-symbols-outlined text-4xl">error</span>
                </div>
            }
        </div>

        <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-2">
            @(Model.IsSuccess ? "Verification Successful" : "Verification Failed")
        </h2>
        
        <p class="text-slate-600 dark:text-slate-400 mb-8">
            @Model.StatusMessage
        </p>

        <a href="@(Model.IsSuccess ? "/" : "/Public/Auth/Login")" class="inline-block w-full bg-primary hover:bg-primary/95 text-white font-semibold py-3 rounded-lg transition-all shadow-md shadow-primary/10">
            @(Model.IsSuccess ? "Go to Homepage" : "Back to Login")
        </a>
    </main>

    <footer class="mt-12 text-slate-400 dark:text-slate-500 text-xs">
        Â© 2024 GearZone Inc.
    </footer>
</body>
</html>
