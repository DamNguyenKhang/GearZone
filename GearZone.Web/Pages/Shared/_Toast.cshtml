@if (TempData["SuccessMessage"] != null)
{
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function() {
            window.toast.success('@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(TempData["SuccessMessage"]?.ToString()))');
        });
    </script>
}

